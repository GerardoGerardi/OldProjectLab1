@using Net14Web.Models.BookingWeb
@model LoginViewModel

@{
    Layout = "_LayoutBookingWeb";
}
@section Style
{
    <link href="~/css/booking.css" rel="stylesheet" />
}

<div>
    <form method="post">
        <div>
            Name <input placeholder="Name" name="name" />
            <div>@Html.ValidationMessageFor(x => x.Name)</div>
        </div>
        <div>
            E-mail <input placeholder="Email" name="email" />
            <div>@Html.ValidationMessageFor(x => x.Email)</div>
        </div>
        <div>
            Password <input placeholder="Password" type="password" name="password" />
            <div>@Html.ValidationMessageFor(x => x.Password)</div>
        </div>
        <div>
            <input type="submit" value="Continue" />
        </div>
    </form>
</div>